        </CheckBox>


        <CheckBox Name="eggs"  Content="Hold Eggs"  IsEnabled="False" Grid.Column="3" Grid.Row="2" FontSize="10" VerticalAlignment="Bottom">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.LayoutTransform>
        </CheckBox>

        <CheckBox Name="bacon"  Content="Hold Bacon   "  IsEnabled="False" Grid.Column="3" Grid.Row="2" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        
        
        
        <Button Content="Back" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="4" Grid.Column ="2"  Width="120" Height="40" Click="BackToEntrees" VerticalAlignment="Bottom"></Button>
        <Button Content="Order" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="4" Grid.Column ="2"  Width="120" Height="40" Click="OrderItem" VerticalAlignment="Top"></Button>




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
